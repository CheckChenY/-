.user-head {
    border-top: 2px solid whitesmoke;
    /* margin-top: 20px; */
    padding-top: 18px;
}
.search-content .ant-input {
    border-radius: 4px;
    box-shadow: 0 2px 4px 0 rgba(235, 235, 235, 0.5);
    background-color: #ffffff;
    border: solid 1px #e9e9e9;
}

.search-content .ant-btn-primary {
    background-color: #ff4444;
    border-color: #ff9191;
    border-radius: 4px;
    background-image: linear-gradient(243deg, #ff4444, #ff9191);
    font-family: PingFangSC;
    font-size: 14px;
    font-weight: 600;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: #ffffff;
}

.hotsearch-all {
    margin-top: 15px;
}

.hotsearch-title {
    font-family: PingFangSC;
    font-size: 13px;
    font-weight: 600;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    /* margin-right: 10px; */
}

.hotsearch-title-one {
    display: inline-block;
    /* width: 66px; */
    height: 20px;
    border-radius: 15px;
    background-color: #f7f7f7;
    font-family: PingFangSC;
    font-size: 11px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
    text-align: center;
    /* margin-left: 5px; */
    color: black;
}